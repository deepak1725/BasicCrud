{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2016","dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,    
    "outDir": "./dist/myApp",
    "declaration": false,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "angularCompilerOptions": {
   "genDir": "aot",
   "skipMetadataEmit" : true
 }
}
