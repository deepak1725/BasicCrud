{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2016","dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,    
    "outDir": "./dist/out-tsc",
    "declaration": false,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "files": [
    "src/app/app.module.ts",
    "src/main.ts"
  ],

  "angularCompilerOptions": {
   "genDir": "aot",
   "skipMetadataEmit" : true
 }
}
